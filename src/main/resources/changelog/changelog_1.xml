<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="load data to table" author="oleg">

        <createTable tableName="trip">

            <column name="trip_id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="uuid"/>
            <column name="scooter_id" type="uuid"/>
            <column name="start" type="timestamp"/>
            <column name="finish" type="timestamp"/>
            <column name="trip_time" type="timestamp"/>
            <column name="point" type="Point"/>
            <column name="distance" type="NUMERIC"/>
            <column name="status" type="varchar(32)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>